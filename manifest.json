{
	"manifest_version": 3,
	"name": "Focus Shield Simple",
	"version": "0.2.0",
	"description": "集中モード中は設定したサイトをブロック画面に置き換えます。",
	"action": { "default_title": "Focus Shield" },
	"background": { "service_worker": "service_worker.js" },
	"permissions": ["storage", "tabs"],
	"host_permissions": ["<all_urls>"],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	}
}
